---
config:
theme: 'base'
themeVariables:
    primaryColor: '#BB2528'
    primaryTextColor: '#fff'
    primaryBorderColor: '#7C0000'
    lineColor: '#F8B229'
    secondaryColor: '#267826'
    tertiaryColor: '#fff'
---
flowchart LR
    classDef SOURCE stroke:#00f,fill:#0ff,color:black
    classDef TARGET stroke:#0f0,fill:#0fa,color:black
    classDef INTERNAL stroke:#f00,fill:#fa0,color:black

    target:::TARGET
    sample_table:::SOURCE

    subgraph sample_table
        sample_table.age[age]
    end

    subgraph target
        target.avg_age[avg_age]
        target.max_age[max_age]
    end

    sample_table.age -- COLUMN --> target.avg_age
    sample_table.age -- COLUMN --> target.max_age
