flowchart LR
    classDef SOURCE stroke:Blue,fill:LightBlue,color:black
    classDef TARGET stroke:Green,fill:LightGreen,color:black
    classDef INTERMEDIATE stroke:DarkOrange,fill:Orange,color:black
    classDef INTERNAL stroke:Purple,fill:Violet,color:black
    classDef FIELD stroke:Orange,fill:Gold,color:black

    sample_table:::SOURCE
    target:::TARGET
    internal:::INTERNAL

    subgraph sample_table
        sample_table.age[age]:::FIELD
        sample_table.id[id]:::FIELD
        sample_table.name[name]:::FIELD
    end

    subgraph target
        target.age[age]:::FIELD
        target.conditional_value[conditional_value]:::FIELD
        target.id[id]:::FIELD
        target.id_and_name[id_and_name]:::FIELD
        target.id_str[id_str]:::FIELD
        target.literal[literal]:::FIELD
        target.name_age[name_age]:::FIELD
        target.name_upper[name_upper]:::FIELD
        target.none_value[none_value]:::FIELD
        target.original_name[original_name]:::FIELD
    end

    subgraph internal
        internal.None[None]:::FIELD
        internal.literal[literal]:::FIELD
    end

    internal.None -- COLUMN --> target.none_value
    internal.literal -- COLUMN --> target.literal
    sample_table.age -- COLUMN --> target.age
    sample_table.age -- COLUMN --> target.name_age
    sample_table.id -- COLUMN --> target.conditional_value
    sample_table.id -- COLUMN --> target.id
    sample_table.id -- COLUMN --> target.id_and_name
    sample_table.id -- COLUMN --> target.id_str
    sample_table.name -- COLUMN --> target.conditional_value
    sample_table.name -- COLUMN --> target.id_and_name
    sample_table.name -- COLUMN --> target.name_age
    sample_table.name -- COLUMN --> target.name_upper
    sample_table.name -- COLUMN --> target.original_name
